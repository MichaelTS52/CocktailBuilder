<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CocktailBuilder" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/item_main</item>
        <item name="colorAccent">@color/white_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white_blue</item>
    </style>

    <style name="Theme.CocktailBuilder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CocktailBuilder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white_blue</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>

    <style name="Theme.CocktailBuilder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>